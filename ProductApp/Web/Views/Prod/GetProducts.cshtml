@model dynamic

@{
    ViewBag.Title = "GetProducts";
}

<h2>All Products</h2>
@Html.ActionLink("Add new Product", "Createp", "Prod")
<table  class="table table-bordered">
    <thead>
        <tr style="background-color:skyblue">
            <th>Company Name</th>
            <th>Mobile Name</th>
            <th>Ram</th>
            <th>Storage</th>
            <th>Color</th>
            <th>Price</th>
            <th>Location</th>
            <th>Store Name</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var products in Model)
        {
        <tr>
            <th scope="row">@products.C_Name</th>
            <td>@products.M_Name</td>
            <td>@products.Ram</td>
            <td>@products.Storage</td>
            <td>@products.Color</td>
            <td>@products.Price</td>
            <td>@products.Locations</td>
            <td>@products.Store</td>
            <td>@Html.ActionLink("Details", "GetProductById", new { id = products.P_id })</td>
            <td>@Html.ActionLink("Delete", "DeleteProductById", new { id = products.P_id })</td>

        </tr>
        }
    </tbody>
</table>
