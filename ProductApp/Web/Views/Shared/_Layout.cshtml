<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Mobile Store", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Session["UserName"] != null)
                    {
                        if (Session["UserName"].ToString() == "Admin")
                        {
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("View Customers", "GetCustomer", "Product")</li>
                            <li>@Html.ActionLink("View Products", "GetProducts", "Prod")</li>
                            <li>@Html.ActionLink("View orders", "Contact", "Home")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>
                                @Html.ActionLink(
                                     $"{Session["UserName"]}","Index","Home")
                            </li>
                            <li>@Html.ActionLink("LogOut", "userLogout", "Product")</li>
                        }
                        else
                        {
                            <li>@Html.ActionLink("Home", "Index", "Home")</li>
                            <li>@Html.ActionLink("About", "About", "Home")</li>
                            <li>@Html.ActionLink("Profile", "profile", "Product")</li>
                            <li>@Html.ActionLink("Book order", "GetProductsCust", "Prod")</li>
                            <li>@Html.ActionLink("View Cart", "GetCartProducts", "Prod")</li>
                            <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                            <li>
                                @Html.ActionLink($"{Session["UserName"]}","Index","Home")
                            </li>
                            <li>@Html.ActionLink("LogOut", "userLogout", "Product")</li>
                        }
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                        <li>@Html.ActionLink("Register", "Createreg", "Product")</li>
                        <li>@Html.ActionLink("Login", "Loginn", "Product")</li>

                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
